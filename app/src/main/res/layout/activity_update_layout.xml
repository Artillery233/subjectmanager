<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="UI.UpdateActivity">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑课程"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="50dp"/>
    <TextView
        android:id="@+id/Cname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:text="课程名"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="30dp"/>
    <EditText
        android:id="@+id/upCname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Cname"
        android:hint="请输入你要显示的课程名"/>
    <TextView
        android:id="@+id/CNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/upCname"
        android:textSize="30dp"
        android:text="课程编号"
        />
    <EditText
        android:id="@+id/upCNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/CNo"
        android:hint="请输入你的课程编号"
        />
    <TextView
        android:id="@+id/CTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/upCNo"
        android:text="任课老师"
        />
    <EditText
        android:id="@+id/upCTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入任课老师"
        app:layout_constraintTop_toBottomOf="@+id/CTeacher"/>
    <TextView
        android:id="@+id/CStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/upCTeacher"
        android:text="开始时间"
        />
    <EditText
        android:id="@+id/upCStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入任课老师"
        app:layout_constraintTop_toBottomOf="@+id/CStart"/>
    <TextView
        android:id="@+id/CEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/upCStart"
        android:text="结束时间"
        />
    <EditText
        android:id="@+id/upCEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入任课老师"
        app:layout_constraintTop_toBottomOf="@+id/CEnd"/>
    <Button
        android:id="@+id/upcancel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/logout_selector"
        app:layout_constraintStart_toEndOf="@id/sure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/upCEnd"/>
    <Button
        android:id="@+id/upsure"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/upCEnd"/>
    <Spinner
        android:id="@+id/alter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/week"
        app:layout_constraintTop_toTopOf="@id/CEnd"
        app:layout_constraintStart_toEndOf="@id/CEnd"
        app:layout_constraintEnd_toEndOf="parent"
        ></Spinner>



</androidx.constraintlayout.widget.ConstraintLayout>